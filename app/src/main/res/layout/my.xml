<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3E7EE"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/re_myinfo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="18dp"
        android:clickable="true"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/translucent"
        >


        <ImageView
            android:id="@+id/picture"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/translucent_1"
            android:layout_marginTop="8dp"
            android:src="@drawable/yonghutouxiang" />

        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/picture"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nickname_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名："
                android:textColor="#353535"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/nick_name"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="#353535"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/username_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="17dp"
            android:layout_marginBottom="19dp"
            android:layout_toRightOf="@id/picture"
            android:text="账号:"
            android:textColor="#AAAAAA"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="19dp"
            android:layout_toRightOf="@id/picture"
            android:textColor="#AAAAAA"
            android:textSize="14sp"/>


    </RelativeLayout>






    <RelativeLayout
        android:id="@+id/safe"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:clickable="true"
        android:paddingLeft="12dp"
        android:background="@drawable/translucent"
        >

        <ImageView
            android:id="@+id/safe1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/safe" />

        <TextView
            android:id="@+id/iv_safe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/safe1"
            android:text="账号与安全"
            android:textColor="#353535"
            android:textSize="16sp"
            android:clickable="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="350dp"
            android:src="@drawable/right" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/about_us"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:clickable="true"
        android:paddingLeft="12dp"
        android:background="@drawable/translucent">

        <ImageView
            android:id="@+id/iv_shoucang"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/us" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/iv_shoucang"
            android:text="关于我们"
            android:textColor="#353535"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="350dp"
            android:src="@drawable/right" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/help"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="0dp"

        android:clickable="true"
        android:paddingLeft="12dp"
        android:background="@drawable/translucent">


        <ImageView
            android:id="@+id/iv_money_bag"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/fankui" />

        <TextView
            android:id="@+id/help1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/iv_money_bag"
            android:text="帮助与反馈"
            android:textColor="#353535"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="350dp"
            android:src="@drawable/right" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="0dp"

        android:clickable="true"
        android:paddingLeft="12dp"
        android:background="@drawable/translucent">

        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/shezhi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/iv_setting"
            android:text="设置"
            android:textColor="#353535"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="350dp"
            android:src="@drawable/right" />

    </RelativeLayout>
</LinearLayout>






